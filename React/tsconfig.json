{
  "compilerOptions": {
    "outDir": "./../app/src/main/assets",
    "typeRoots": ["src/global.d.ts"],
    "lib": ["ES2015", "dom", "ES2017"],
    "sourceMap": true,
    "declaration": false,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es5",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react-jsx"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["./src/**/*"]
}
